<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorCeleste">

    <Button

        android:id="@+id/button2"
        android:layout_width="137dp"
        android:layout_height="90dp"
        android:layout_marginBottom="152dp"
        android:background="@color/colorVerde"
        android:text="@string/button_1"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="primera_pantalla"/>

    <Button
        android:id="@+id/button"
        android:layout_width="137dp"
        android:layout_height="90dp"
        android:background="@color/colorVerde"
        android:text="@string/button_2"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.147"
         android:onClick="segunda_pantalla"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="274dp"
        android:layout_height="234dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/image_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pork" />

</androidx.constraintlayout.widget.ConstraintLayout>